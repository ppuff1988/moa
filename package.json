{
	"name": "moa",
	"private": true,
	"version": "1.0.7",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node scripts/dev-server.js",
		"dev:vite": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "cross-env NODE_ENV=production node scripts/production-server.js",
		"start:test": "cross-env NODE_ENV=test node scripts/production-server.js",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint-staged": "lint-staged",
		"test:unit": "cross-env NODE_ENV=test vitest",
		"test:api": "cross-env NODE_ENV=test vitest src/routes/api --run",
		"test:api:auto": "cross-env NODE_ENV=test node scripts/run-api-tests.js",
		"test:api:watch": "cross-env NODE_ENV=test vitest src/routes/api",
		"test:api:coverage": "cross-env NODE_ENV=test vitest src/routes/api --coverage",
		"test": "npm run test:api && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:migrate": "node scripts/run-migrations.js",
		"db:migrate:create": "drizzle-kit generate",
		"db:reset": "docker cp migrations/init_database.sql moa_postgres:/tmp/init_database.sql && docker exec -i moa_postgres psql -U moa_user -d moa_db -f /tmp/init_database.sql && docker cp migrations/init_test_users.sql moa_postgres:/tmp/init_test_users.sql && docker exec -i moa_postgres psql -U moa_user -d moa_db -f /tmp/init_test_users.sql && npm run db:migrate",
		"db:studio": "drizzle-kit studio",
		"test:smtp": "node scripts/test-smtp.js",
		"worker:email": "cross-env NODE_ENV=development tsx scripts/email-worker.ts",
		"worker:email:prod": "cross-env NODE_ENV=production tsx scripts/email-worker.ts",
		"queue:status": "tsx scripts/manage-email-queue.ts status",
		"queue:clear": "tsx scripts/manage-email-queue.ts clear",
		"queue:test": "tsx scripts/manage-email-queue.ts test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.22.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.3.3",
		"@sveltejs/kit": "^2.18.1",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"@types/nodemailer": "^7.0.3",
		"@vitest/browser": "^3.2.3",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.30.2",
		"drizzle-orm": "^0.40.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^2.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"arctic": "^3.7.0",
		"dotenv": "^17.2.3",
		"dotenv-expand": "^12.0.3",
		"dotenv-flow": "^4.1.0",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"lucia": "^3.2.2",
		"nodemailer": "^7.0.10",
		"pg": "^8.16.3",
		"pg-boss": "^11.1.2",
		"postgres": "^3.4.5",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		]
	}
}
